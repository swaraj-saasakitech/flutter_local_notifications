<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
>
<RelativeLayout
    android:gravity="center_vertical"
    android:id="@+id/notification_container"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <ImageView
        android:id="@+id/notification_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="11dp"
        android:scaleType="centerInside"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/notification_time"
        android:layout_toRightOf="@+id/notification_image"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/notification_image"
        android:layout_toStartOf="@+id/notification_time"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textAppearance="@style/NotificationTitle"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:singleLine="false"
            android:textAppearance="@style/NotificationText"
            android:textSize="12dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom"
        android:textAppearance="NotificationTime" />

</RelativeLayout>
</LinearLayout>



